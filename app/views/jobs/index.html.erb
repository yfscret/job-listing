<%= link_to  "发布招聘信息", new_job_path, class:'btn btn-success pull-right' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>招工信息</th>
      <th>发布人</th>
      <th>发布时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td><%= link_to  job.title, job %></td>
      <td><%= job.user.email %></td>
      <td><%= job.updated_at %></td>
      <% if current_user && current_user == job.user %>

        <td><%= link_to  "修改", edit_job_path(job) %></td>
        <td><%= link_to  "删除", job, method: :delete %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
